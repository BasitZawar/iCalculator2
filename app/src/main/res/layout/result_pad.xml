<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface">

    <com.gigaworks.tech.calculator.ui.view.CalculatorEditText
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="center|end"
        android:includeFontPadding="false"
        android:paddingEnd="@dimen/space_l"
        android:paddingBottom="@dimen/space_m"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline2"
        custom:maxTextSize="63sp"
        custom:minTextSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result"
        android:text="200+50058" />

    <com.gigaworks.tech.calculator.ui.view.CalculatorEditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="bottom|end"
        android:includeFontPadding="false"
        android:paddingEnd="@dimen/space_l"
        android:paddingBottom="@dimen/space_xxl"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline3"
        custom:maxTextSize="50dp"
        custom:minTextSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expression"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="700" />

</androidx.constraintlayout.widget.ConstraintLayout>