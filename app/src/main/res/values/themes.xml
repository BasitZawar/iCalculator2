<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.CalculatorPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color Themes -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="colorOnError">@color/textAccent</item>
        <!-- Custom Color Themes -->
        <item name="textPrimary">@color/textPrimary</item>
        <item name="textSecondary">@color/textSecondary</item>
        <item name="textAccent">@color/textAccent</item>
        <item name="border">@color/border</item>
        <item name="textDisable">@color/textDisable</item>
        <item name="numPadPrimary">@color/numPadPrimary</item>
        <item name="operatorBtnColor">@color/primary</item>
        <item name="clearColor">@color/clear</item>
        <!-- Status bar Themes -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.CalculatorPlus.NumPad.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/button_ripple_primary</item>
    </style>

    <style name="Widget.CalculatorPlus.NumPad.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="backgroundTint">?attr/numPadPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/button_ripple_secondary</item>
    </style>

    <style name="Widget.CalculatorPlus.NumPad.Primary.IconOnly" parent="Widget.CalculatorPlus.NumPad.Primary">
        <item name="android:tint">?attr/operatorBtnColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_ripple</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.CalculatorPlus.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">63sp</item>
        <item name="android:letterSpacing">-0.005</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">50sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.0025</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">21sp</item>
        <item name="android:letterSpacing">0.0015</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.0015</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.001</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.0025</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.004</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="TextAppearance.CalculatorPlus.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

</resources>